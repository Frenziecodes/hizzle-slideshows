{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "hizzle-slider/slider",
	"title": "Slider",
	"description": "Displays content in a slider.",
	"category": "design",
	"keywords": [
		"slider",
		"slide",
		"testimonial",
		"quote",
		"gallery"
	],
	"icon": "admin-page",
	"version": "1.0.0",
	"textdomain": "hizzle-slider",
	"attributes": {
		"slidesPerView": {
			"type": "number",
			"default": 1
		},
		"showArrows": {
			"type": "boolean",
			"default": true
		},
		"pagination": {
			"type": "boolean",
			"default": true
		},
		"autoplay": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"anchor": true,
		"align": true,
		"ariaLabel": true,
		"color": {
			"gradients": true,
			"link": true
		},
		"dimensions": {
			"minHeight": true
		},
		"spacing": {
			"margin": true
		}
	},
	"editorScript": "file:./index.js",
	"script": "file:./view.js",
	"style": "file:./view.css"
}